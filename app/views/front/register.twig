<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArticleHub - Login/Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .form-slide {
            transition: all 0.3s ease-in-out;
            transform: translateX(0);
            opacity: 1;
        }
        .form-slide.hidden {
            transform: translateX(100px);
            opacity: 0;
            pointer-events: none;
        }
        .toggle-button {
            transition: all 0.3s ease;
        }
        .input-field {
            transition: all 0.2s ease;
        }
        .input-field:focus {
            transform: translateY(-2px);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-900 to-blue-900 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full relative">
        <!-- Logo and Branding -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">ArticleHub</h1>
            <p class="text-blue-200">Your Platform for Knowledge Sharing</p>
        </div>

        <!-- Main Card -->
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 shadow-2xl border border-white/20">
            <!-- Toggle Buttons -->
            <div class="flex justify-center mb-8">
                <div class="bg-white/5 p-1 rounded-xl">
                    <button id="signinToggle" class="toggle-button px-6 py-2 rounded-lg text-sm font-medium text-white bg-blue-600">Sign In</button>
                    <button id="signupToggle" class="toggle-button px-6 py-2 rounded-lg text-sm font-medium text-white/70 hover:text-white">Sign Up</button>
                </div>
            </div>

            <!-- Sign In Form -->
            <form id="signinForm" class="form-slide space-y-6" action="/login" method="POST">
                <div>
                    <label for="signinEmail" class="block text-sm font-medium text-white/90 mb-2">Email Address</label>
                    <input type="email" name="email" id="signinEmail" 
                           class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/50 focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none"
                           placeholder="your@email.com" required>
                </div>
                <div>
                    <label for="signinPassword" class="block text-sm font-medium text-white/90 mb-2">Password</label>
                    <input type="password" name="password" id="signinPassword" 
                           class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/50 focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none"
                           placeholder="••••••••" required>
                </div>
                <button type="submit" 
                        class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-transparent">
                    Sign In
                </button>
            </form>

            <!-- Sign Up Form -->
            <form id="signupForm" class="form-slide hidden space-y-6" action="/register" method="POST">
                <div>
                    <label for="signupName" class="block text-sm font-medium text-white/90 mb-2">Full Name</label>
                    <input type="text" name="name" id="signupName" 
                           class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/50 focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none"
                           placeholder="John Doe" required>
                </div>
                <div>
                    <label for="signupEmail" class="block text-sm font-medium text-white/90 mb-2">Email Address</label>
                    <input type="email" name="email" id="signupEmail" 
                           class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/50 focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none"
                           placeholder="your@email.com" required>
                </div>
                <div>
                    <label for="signupPassword" class="block text-sm font-medium text-white/90 mb-2">Password</label>
                    <input type="password" name="password" id="signupPassword" 
                           class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/50 focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none"
                           placeholder="••••••••" required>
                </div>
                <div>
                    <label for="role" class="block text-sm font-medium text-white/90 mb-2">Account Type</label>
                    <select name="role" id="role" 
                            class="input-field w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:border-blue-400 focus:ring focus:ring-blue-400/20 focus:outline-none">
                        <option value="2" class="text-gray-900">Author</option>
                        <option value="3" class="text-gray-900">User</option>
                    </select>
                </div>
                <button type="submit" name="submit"
                        class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-transparent">
                    Create Account
                </button>
            </form>
        </div>
    </div>

    <script>
        const signinToggle = document.getElementById('signinToggle');
        const signupToggle = document.getElementById('signupToggle');
        const signinForm = document.getElementById('signinForm');
        const signupForm = document.getElementById('signupForm');

        function toggleForms(showSignIn) {
            if (showSignIn) {
                signinForm.classList.remove('hidden');
                signupForm.classList.add('hidden');
                signinToggle.classList.add('bg-blue-600');
                signinToggle.classList.remove('text-white/70');
                signinToggle.classList.add('text-white');
                signupToggle.classList.remove('bg-blue-600');
                signupToggle.classList.add('text-white/70');
                signupToggle.classList.remove('text-white');
            } else {
                signinForm.classList.add('hidden');
                signupForm.classList.remove('hidden');
                signupToggle.classList.add('bg-blue-600');
                signupToggle.classList.remove('text-white/70');
                signupToggle.classList.add('text-white');
                signinToggle.classList.remove('bg-blue-600');
                signinToggle.classList.add('text-white/70');
                signinToggle.classList.remove('text-white');
            }
        }

        signinToggle.addEventListener('click', () => toggleForms(true));
        signupToggle.addEventListener('click', () => toggleForms(false));
    </script>
</body>
</html>